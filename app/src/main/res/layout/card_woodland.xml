<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="80dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/change_woodland_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/woodlandTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/favouriteButton"
            android:layout_toEndOf="@+id/imageIcon"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/woodlandTitle"
            android:layout_toStartOf="@id/favouriteButton"
            android:layout_toEndOf="@+id/imageIcon"
            android:textColor="@color/cardview_dark_background" />


        <ImageButton
            android:id="@+id/favouriteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/favouritebutton"
            app:srcCompat="@android:drawable/btn_star_big_off" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>